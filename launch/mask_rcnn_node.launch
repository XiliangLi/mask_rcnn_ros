<launch>
  <arg name="sensor_name" default="primesense" />
  <arg name="visualize" default="true" />
  <arg name="debug" default="false" />

  <arg if="$(arg debug)" name="launch_prefix" default="gnome-terminal -x python -m pdb "/>
  <arg unless="$(arg debug)" name="launch_prefix" default="gnome-terminal -x   "/> 

  <node name="mask_rcnn" pkg="mask_rcnn_ros" type="mask_rcnn_node.py" output="log">
    <!-- <remap from="~input" to="~rgb_image_sub_topic" /> --> 
    <rosparam command="load" file="$(find depth_segmentation)/cfg/$(arg sensor_name)_topics.yaml"/>
    <remap from="/camera/rgb/image_raw" to="camera/rgb/image_raw" />
    <param name="~visualization" value="$(arg visualize)" />
  </node>
</launch>
